local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Raio Hub v5",
    LoadingTitle = "Carregando...",
    LoadingSubtitle = "By SeuNome",
    ConfigurationSaving = {
        Enabled = false,
        FolderName = nil,
        FileName = "RaioHubV5"
    },
    Discord = {
        Enabled = false,
        Invite = "",
        RememberJoins = true
    },
    KeySystem = false
})

local Tab = Window:CreateTab("Principal", 4483362458)

local Section = Tab:CreateSection("Opções")

local Toggle = Tab:CreateToggle({
    Name = "Ativar Aimbot",
    CurrentValue = false,
    Flag = "AimbotToggle",
    Callback = function(Value)
        print("Aimbot: ", Value)
    end
})

local Slider = Tab:CreateSlider({
    Name = "FOV do Aimbot",
    Range = {10, 300},
    Increment = 5,
    Suffix = "px",
    CurrentValue = 100,
    Flag = "FOVSlider",
    Callback = function(Value)
        print("FOV: ", Value)
    end
})

local Button = Tab:CreateButton({
    Name = "Executar Script",
    Callback = function()
        print("Script Executado!")
    end
})

Rayfield:LoadConfiguration()
